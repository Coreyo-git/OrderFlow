{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "CustomerService (local)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/src/CustomerService/bin/Debug/net9.0/CustomerService.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/CustomerService",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "console": "integratedTerminal"
    },
    {
      "name": "Debug Tests",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "dotnet",
      "args": [
        "test",
        "${workspaceFolder}/tests/CustomerService.Domain.Tests/CustomerService.Domain.Tests.csproj",
        "--no-build"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "stopAtEntry": false
    },
    {
      "name": "Docker: Attach to CustomerService",
      "type": "docker",
      "request": "attach",
      "platform": "netCore",
      "sourceFileMap": {
        "/src": "${workspaceFolder}"
      }
    }
  ]
}
